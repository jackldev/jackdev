{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "layout/*": ["src/layout/*"],
      "public/*": ["src/public/*"],
      "styles/*": ["src/styles/*"],
      "types/*": ["src/types/*"],
      "lib/*": ["src/lib/*"],
      "schema/*": ["src/schema/*"]
    },
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "strictNullChecks": true,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "**/*.astro", ".astro/types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
