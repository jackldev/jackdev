---
import Button from 'components/shared/Button/Button.astro'
import IClose from 'components/shared/Icons/IClose.astro'
import IHamburger from 'components/shared/Icons/IHamburger.astro'
---

<div
  class="relative top-[-0.5rem] z-[9] w-6 h-6 lg:hidden max-[992px]:ml-[1.25rem]"
>
  <Button id="hamburger" className="scale-75" type="button">
    <IHamburger className="icon animate-fadein" strokeColor="#fff" />

    <IClose className="icon hidden animate-fadeout" strokeColor="#fff" />
  </Button>
</div>
