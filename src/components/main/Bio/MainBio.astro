---
import Socials from 'components/shared/Socials.astro'

const { title, description } = Astro.props as {
  title: string
  description: string
}
---

<div class="flex flex-col gap-6">
  <h2 class="text-8xl">{title}</h2>
  <p
    class="w-full text-lg leading-relaxed tracking-wide opacity-70 lg:w-2/3 dark:font-light"
  >
    {description}
  </p>

  <Socials direction="mt-4 flex-row" show />
</div>
