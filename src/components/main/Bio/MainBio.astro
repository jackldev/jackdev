---
import Socials from 'components/shared/Socials.astro'

const { title, description } = Astro.props as {
  title: string
  description: string
}
---

<div
  class="flex flex-col gap-5 items-center justify-center text-center text-light dark:text-dark"
>
  <h2 class="text-8xl sm:text-9xl">{title}</h2>
  <p
    class="w-full leading-relaxed tracking-wide opacity-70 text-lg font-light sm:text-xl lg:w-1/2"
  >
    {description}
  </p>

  <Socials direction="mt-6 flex-row" show />
</div>
