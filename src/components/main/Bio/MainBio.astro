---
import Socials from 'components/shared/Socials.astro'

const { title, description } = Astro.props as {
  title: string
  description: string
}
---

<div class="flex flex-col gap-6">
  <h2 class="text-7xl">{title}</h2>
  <p class="text-md w-full whitespace-pre-wrap lg:w-3xl">
    {description}
  </p>

  <Socials direction="mt-4 flex-row" show loading="eager" />
</div>
