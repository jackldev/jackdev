---
import { getCollection } from 'astro:content'

import AnimationFadeIn from 'components/shared/AnimationFadeIn.astro'
import Socials from 'components/shared/Socials.astro'
import Tools from 'components/shared/Tools.astro'
import Image from 'components/shared/Image.astro'

const bio = await getCollection('bio')
const { slugs, title, description, image } = bio[0].data
---

<section class="grid [&>*]:grid-stack" id={slugs}>
  <AnimationFadeIn>
    <Image
      class="w-full aspect-[18/4] object-fill dark:filter dark:grayscale dark:invert smx:aspect-auto 3xsx:aspect-[4/8] 3xsx:object-cover"
      src={image.src}
      alt={image.alt}
      width={image.width}
      height={image.height}
      loading="lazy"
    />
  </AnimationFadeIn>

  <AnimationFadeIn>
    <div class="relative z-[1] wrapper">
      <div class="grid-2 gap-40 smx:grid-1 smx:gap-20">
        <div>
          <h2>{title}</h2>
          <p class="w-4/5 mt-6 mb-12 text-lg leading-[1.75] 3xsx:w-full">
            {description}
          </p>

          <Socials direction="flex-row" show />
        </div>

        <Tools />
      </div>
    </div>
  </AnimationFadeIn>
</section>
