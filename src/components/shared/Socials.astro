---
import { getCollection } from 'astro:content'

import Image from 'components/shared/Image.astro'

type SocialProp = {
  show: boolean
  direction: 'flex-row' | 'flex-col'
  loading: 'eager' | 'lazy'
}

const { show, direction, loading } = Astro.props as SocialProp

const socials = await getCollection('socials')
---

<div
  class={`${show ? `invert-0` : `invert dark:invert-0`} ${direction} flex w-fit items-center justify-between gap-6`}
>
  {
    socials.map(({ data }) => (
      <a
        class="h-6 w-6 opacity-70 transition-all delay-150 ease-out hover:opacity-100"
        href={data.link}
        title={data.title}
        target="_blank"
      >
        <Image
          src={data.image.src}
          fallbackImg="/icons/qmark.webp"
          alt={data.image.alt}
          width={data.image.width}
          height={data.image.height}
          loading={loading}
        />
      </a>
    ))
  }
</div>
