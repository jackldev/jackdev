---
import { base } from 'components/shared/Button/button'

interface ButtonProp {
  id?: string
  class: string
  type: 'submit' | 'button' | 'reset' | undefined
  disabled?: boolean
}

const { id, class: className, type, disabled } = Astro.props as ButtonProp
---

<button id={id} class={`${base} ${className}`} type={type} disabled={disabled}>
  <slot />
</button>
