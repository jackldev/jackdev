---
import { getCollection } from 'astro:content'
import { SEO } from 'astro-seo'

import 'styles/base.css'

interface AstroProp {
  title: string
  description: string
}

const seo = await getCollection('seo')
const {
  metaTitle,
  metaDescription,
  metaSiteurl,
  metaImage,
  metaAlt,
  metaAuthor,
  metaType,
  metaTwitter,
  metaKeywords
} = seo[0].data

const { title, description } = Astro.props as AstroProp
---

<head>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <SEO
    title={`${metaTitle} | ${title}`}
    description={description}
    openGraph={{
      basic: {
        title: metaTitle,
        type: metaType,
        image: metaImage,
        url: metaSiteurl
      },
      article: { authors: [metaAuthor] },
      image: { alt: metaAlt },
      optional: { description: metaDescription }
    }}
    twitter={{ creator: metaTwitter }}
    extend={{ meta: [{ name: 'keywords', content: metaKeywords }] }}
  />
  <link rel="icon" type="image/x-icon" href="/icons/favicon.ico" />
</head>
