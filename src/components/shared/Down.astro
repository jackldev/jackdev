---
import IDown from 'components/shared/Icons/IDown.astro'
---

<div
  class="mx-auto mt-20 flex w-fit cursor-pointer justify-center"
  id="down"
  title="Scroll Down"
>
  <IDown
    class="scale-90 opacity-80 transition-[opacity] delay-150 duration-300 ease-out hover:opacity-100"
    strokeColor="#1D93B1"
  />
</div>

<script>
  const down = document.getElementById('down') as HTMLButtonElement
  const section = document.getElementById('projects') as HTMLButtonElement

  down.addEventListener('click', () => {
    section.scrollIntoView({ block: 'start', behavior: 'smooth' })
  })
</script>
