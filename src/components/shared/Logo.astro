---
import ILogo from 'components/shared/Icons/ILogo.astro'

import { getCollection } from 'astro:content'

const seo = await getCollection('seo')
---

<button
  class="relative z-[1] w-4 cursor-pointer"
  id="logo"
  title={seo[0].data.metaTitle}
>
  <span class="cursor-pointer invert dark:invert-0">
    <ILogo strokeColor="#000" />
  </span>
</button>

<script>
  const logo = document.getElementById('logo')

  logo!.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' })

    if (window.location.pathname !== '/') return window.location.replace('/')
  })
</script>
