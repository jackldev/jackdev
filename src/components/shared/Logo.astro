---
import ILogo from 'shared/Icons/ILogo'

import { getCollection } from 'astro:content'

const seo = await getCollection('seo')
---

<div class="relative z-[1] w-[4rem] h-[4rem] logo">
  <button class="flex items-center dark:invert" title={seo[0].data.metaTitle}>
    <ILogo client:load />
  </button>
</div>

<script>
  const logo = document.querySelector('.logo')

  logo!.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' })

    if (window.location.pathname !== '/') return window.location.replace('/')
  })
</script>
