---
import { getCollection } from "astro:content";

const tools = await getCollection("tools");
---

<div class="flex flex-col gap-8">
  {
    tools
      .sort((a, b) => a.data.id - b.data.id)
      .map(({ data }) => (
        <div class="flex flex-col gap-4">
          <h3 class="text-[2.25rem] font-normal">{data.title}</h3>

          <div class="flex flex-wrap items-center gap-4">
            {data.tools.map((tool) => (
              <button class="py-3 px-6 bg-white dark:bg-black bg-opacity-90 text-black dark:text-white rounded-sm text-sm font-main uppercase cursor-default smx:px-4 2xsx:text-xs">
                {tool}
              </button>
            ))}
          </div>
        </div>
      ))
  }
</div>
