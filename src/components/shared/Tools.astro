---
import { getCollection } from 'astro:content'

import { base, sizes, space } from 'components/shared/Button/button'

const tools = await getCollection('tools')
---

<div class="flex flex-col gap-8">
  {
    tools
      .sort((a, b) => a.data.id - b.data.id)
      .map(({ data }) => (
        <div class="flex flex-col gap-4">
          <h3 class="text-2xl font-normal text-light dark:text-dark lg:text-right">
            {data.title}
          </h3>

          <div class="flex flex-wrap items-center gap-2 lg:justify-end">
            {data.tools.map((tool) => (
              <button
                class={`${base} ${space.small} ${sizes.small} bg-light/60 dark:bg-dark/60 bg-opacity-90 text-dark/80 dark:text-light font-semibold font-main uppercase cursor-default`}
              >
                {tool}
              </button>
            ))}
          </div>
        </div>
      ))
  }
</div>
